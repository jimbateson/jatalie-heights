<div class="mt-6">
	<div class="md:flex md:flex-wrap md:-mx-4">
		{% for walk in collections.walk.slice(0, 3) %}
			<div class="md:px-4 mb-8 md:mb-0 md:w-1/3">
				<div class="walk walk-listing transition transition-property-shadow transition-timing-linear rounded-lg overflow-hidden">
					<!-- Walk image -->
					<div class="h-64 bg-cover relative" style="background-image: url({{walk.data.listing}})">
						<span class="walk-location walk-location-tag">{{walk.data.location}}</span>
					</div>

					<!-- Walk info -->
					<div class="bg-grey-lighter p-6">
						<h3 class="uppercase text-2xl font-sans">{{walk.data.title}}</h3>
						<p>{{walk.data.date}}</p>
						<a href="{{walk.url}}" class="btn btn-primary inline-block mt-6 transition transition-property-bg">Retrace our steps</a>
					</div>
				</div>
			</div>
		{%- endfor %}
	</div>
</div>

<div class="text-center">
	<a href="{{ '/walks/' | url }}" class="btn btn-primary btn-large mt-16 inline-block transition transition-property-bg">View all walks</a>
</div>