---
layout: _layouts/base.njk
---

<section class="h-128 bg-top relative overflow-hidden flex flex-col items-center justify-center">
	<picture class="banner-hero">
		<source srcset="{{header}}" media="(min-width: 1220px)">
		<source srcset="{{header}}" media="(min-width: 1024px)">
		<source srcset="{{header}}" media="(min-width: 768px)">
		<img src="{{header}}" alt="{{title}}">
	</picture>

	<h1 class="font-sans text-white text-4xl md:text-5xl mt-24 md:mt-0 text-center uppercase">
		{{title}}
		<span class="block text-xl">{{location}}</span>
	</h1>
</section>

<section class="walk-container">
	<div class="py-6">
		<div class="container px-4 mx-auto">
			<ul class="list-reset">
				<li class="inline-block font-sans"><a href="{{ '/' | url }}" class="text-black no-underline hover:text-green-bright">Home</a> /</li>
				<li class="inline-block font-sans"><a href="{{ '/walks/' | url }}" class="text-black no-underline hover:text-green-bright">The Walks</a> /</li>
				<li class="inline-block font-sans"><span class="text-blue">{{title}}</span></li>
			</ul>
		</div>
	</div>

	<section class="pt-6 pb-16">
		<div class="container px-4 mx-auto">
			<div class="mt-6">
				<div class="md:flex md:flex-wrap md:-mx-4">
					<div class="md:px-4 md:w-2/3">
						<div class="flex items-center">
							<div class="mr-4">
								<img src="/assets/images/author-jim.jpg" style="min-width: 90px;" class="rounded-full" alt="A post by {{walk.data.author}}">
							</div>

							<div>
								<h2 class="text-4xl font-sans">{{title}}</h2>
								<p class="font-sans mt-2 text-lg"><time datetime="{{ date | w3DateFilter }}">{{ date | dateFilter }}</time></p>
							</div>
						</div>

						<div class="text-2xl py-6 font-sans leading-normal">
							<p>{{summary}}</p>
						</div>

						<!-- TODO: Create component class for p margins -->
						<div class="leading-normal walk-content">
							{{ content | safe }}
